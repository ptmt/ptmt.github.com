<div class="idea-layout">
    <article class="idea-content">
        <h1>{{title}}</h1>
        {{#if page.metadata.summary}}
        <p class="post-subtitle">
            {{page.metadata.summary}}
        </p>
        {{/if}}
        <div class="content">
            {{{page.content}}}
        </div>
    </article>
</div>
{{#content "right-column"}}
    <div class="idea-right-column">
        {{#if page.metadata.image}}
        <div class="idea-logo">
            <img src="{{page.metadata.image}}" alt="{{title}} logo" />
        </div>
        {{/if}}
        <div class="idea-metadata">
            {{#if page.metadata.status}}
            <div class="metadata-item">
                <span class="metadata-label">Status</span>
                <span class="metadata-value status-{{page.metadata.status}}">{{page.metadata.status}}</span>
            </div>
            {{/if}}
            
            {{#if page.metadata.link}}
            <div class="metadata-item">
                <span class="metadata-label">Link</span>
                <span class="metadata-value">
                    <a href="{{page.metadata.link}}" target="_blank" rel="noopener noreferrer">{{page.metadata.link}}</a>
                </span>
            </div>
            {{/if}}
            
            {{#if page.metadata.github}}
            <div class="metadata-item">
                <span class="metadata-label">GitHub</span>
                <span class="metadata-value">
                    <a href="{{page.metadata.github}}" target="_blank" rel="noopener noreferrer">View on GitHub</a>
                </span>
            </div>
            {{/if}}
            
            {{#if page.tags}}
            <div class="metadata-item">
                <span class="metadata-label">Tags</span>
                <div class="metadata-value">
                    {{#each page.tags}}
                    <span class="tag">{{this}}</span>
                    {{/each}}
                </div>
            </div>
            {{/if}}
        </div>
    </div>
{{/content}}


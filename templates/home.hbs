{{include "header.html"}}

<main class="main-content">
    <div class="left-column">
        <section class="featured-post">
            <h2 class="section-title">Featured</h2>
            {{#each posts}}
            {{#if @first}}
            <article class="blog-post">
                <div class="post-content">
                    <h3 class="featured-title"><a href="/{{path}}">{{title}}</a></h3>
                    <time class="post-date">{{formatDate date "MMM d, yyyy"}}</time>
                    <p class="post-excerpt">{{excerpt content}}</p>
                    <p class="read-time">4 min read</p>
                </div>
            </article>
            {{/if}}
            {{/each}}
        </section>

        <section class="latest-posts">
            <h2 class="section-title">Latest</h2>
            <div class="post-list">
                {{#each posts}}
                {{#unless @first}}
                <article class="post-card">
                    <h3 class="post-card-title"><a href="/{{path}}">{{title}}</a></h3>
                    <div class="post-card-meta">
                        <time class="post-date">{{formatDate date "MMM d, yyyy"}}</time>
                        <span class="read-time">4 min read</span>
                    </div>
                    <p class="post-excerpt">{{excerpt content}}</p>
                </article>
                {{/unless}}
                {{/each}}
            </div>
        </section>
    </div>

    <div class="right-column">
        <aside class="sidebar">
            <div class="sidebar-section">
                <h3 class="sidebar-title">About</h3>
                <p class="sidebar-content">{{description}}</p>
            </div>
        </aside>
    </div>
</main>

</body>
</html>

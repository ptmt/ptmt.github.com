<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{{siteName}}</title>
  </head>
  <body>
    <h1>Latest Posts</h1>
    {{#each posts}}
      <article>
        <h2><a href="/{{path}}">{{title}}</a></h2>
        <time>{{formatDate date "MMM d, yyyy"}}</time>
        <p>{{excerpt content}}</p>
      </article>
    {{/each}}
  </body>
</html>
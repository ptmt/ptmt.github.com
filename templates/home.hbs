{{include "header.html"}}

<main class="main-content">
    <div class="left-column">
        <!-- Personal Information Section -->
        <section class="personal-info">
            <h2 class="section-title">About Me</h2>
            <div class="about-content">
                <p>Hello world! Welcome to my blog.</p>
                <p>Work in progress.</p>
            </div>
        </section>

        <!-- Blog Posts Feed -->
        <section class="blog-feed">
            <h2 class="section-title">Latest Posts</h2>
            {{#each posts}}
            <article class="blog-post">
                <div class="post-content">
                    <h3 class="post-title">
                        <a href="/{{path}}">{{title}}</a>
                    </h3>
                    <time class="post-date">{{formatDate date "MMM d, yyyy"}}</time>
                    <p class="post-excerpt">{{excerpt content}}</p>
                    <p class="read-time">4 min read</p>
                </div>
            </article>
            {{/each}}
        </section>
    </div>

    <div class="right-column">
        <!-- Sidebar Content -->
        <aside class="sidebar">
            <div class="sidebar-section">
                <h3 class="sidebar-title">About This Blog</h3>
                <p class="sidebar-content">{{description}}</p>
            </div>
            
            <div class="sidebar-section">
                <h3 class="sidebar-title">Quick Links</h3>
                <ul class="quick-links">
                    <li><a href="/about">About Me</a></li>
                    <li><a href="/posts">All Posts</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <li><a href="/archive">Archive</a></li>
                </ul>
            </div>
        </aside>
    </div>
</main>

</body>
</html>
